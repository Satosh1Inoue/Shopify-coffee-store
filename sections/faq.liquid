<section class="page-width">
    <h3>{{ section.settings.title }}</h3>
    <dl>
        {% for block in section.blocks %}
        <dt>{{ block.settings.title }}</dt>
        <dd>{{ block.settings.answer }}</dd>
        {% endfor %}
    </dl>
</section>


{% schema %}
{
"name": "FAQ",
"settings": [
{
"type": "text",
"id": "title",
"default": "FAQ",
"label": "FAQのタイトル"
}
],

"blocks": [
{
"type": "faq_item",
"name": "FAQ項目",
"settings": [
{
"type": "textarea",
"id": "title",
"label": "質問を入力してください"
},
{
"type": "textarea",
"id": "answer",
"label": "回答を入力してくだい"
}
]
}
],

"presets": [
{ "name": "FAQ" }]}
{% endschema %}