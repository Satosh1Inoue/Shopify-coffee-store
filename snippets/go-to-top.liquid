<p id="page-top"><a href="#">TOP</a></p>
<style>
    #page-top {
        position: fixed;
        bottom: 30%;
        right: 20px;
        font-size: 14px;
        z-index: 99;
    }

    #page-top a {
        background: black;
        text-decoration: none;
        color: #fff;
        width: 50px;
        height: 50px;
        padding: 10px;
        text-align: center;
        display: block;
        border-radius: 50px;
        opacity: 0.9;
        transition: all .3s ease;
    }

    #page-top a:hover {
        text-decoration: none;
        opacity: .5;
    }
</style>
<script>
    $(function () {
        var pagetop = $('#page-top');
        pagetop.hide();
        $(window).scroll(function () {
            if ($(this).scrollTop() > 1200) {
                pagetop.fadeIn();
            } else {
                pagetop.fadeOut();
            }
        });
        pagetop.click(function () {
            $('body, html').animate({ scrollTop: 0 }, 500);
            return false;
        });
    });
</script>